@using TruckServices.Data
@model CustomersData
<style>
    .edit-img-rect {
        width: 200px; /* bigger rectangle for preview */
        height: 140px;
        object-fit: cover;
        border: 3px solid #ccc;
        border-radius: 10px;
    }

</style>
<form asp-action="Edit" asp-route-id="@Model.Id" enctype="multipart/form-data" method="post">
    @Html.AntiForgeryToken()
    <div class="modal-header">
        <h5 class="modal-title">@ViewData["Title"]</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
    </div>
    <div class="modal-body">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="CompanyName" class="form-label"></label>
            <input asp-for="CompanyName" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="StreetAddress" class="form-label"></label>
            <input asp-for="StreetAddress" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="City" class="form-label"></label>
            <input asp-for="City" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="State" class="form-label"></label>
            <input asp-for="State" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Country" class="form-label"></label>
            <input asp-for="Country" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="MobileNumber" class="form-label"></label>
            <input asp-for="MobileNumber" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="SecondMobileNumber" class="form-label"></label>
            <input asp-for="SecondMobileNumber" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" />
        </div>

        <div class="form-check mb-3">
            <input asp-for="IsPaid" class="form-check-input" type="checkbox" />
            <label asp-for="IsPaid" class="form-check-label"></label>
        </div>

        <div class="mb-3">
            <label>Current Image</label>
            <div class="d-flex align-items-center gap-3">
                @if (Model.ImageUrl != null)
                {
                    <img src="@Url.Action("GetImage", "Customers", new { id = Model.Id })"
                         class="edit-img-rect shadow-sm" />
                }
                else
                {
                    <span class="badge bg-light text-secondary">No Image</span>
                }
            </div>
        </div>

        <div class="mb-3">
            <label>Upload New Image</label>
            <input type="file" name="image" class="form-control" />
        </div>

    </div>

    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Save</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
    </div>
</form>


