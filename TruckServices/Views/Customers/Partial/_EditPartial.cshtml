@using TruckServices.Models.ViewModels
@model CustomerServiceVM
<style>
    .edit-img-rect {
        width: 200px; /* bigger rectangle for preview */
        height: 140px;
        object-fit: cover;
        border: 3px solid #ccc;
        border-radius: 10px;
    }

</style>
<form asp-action="Edit" asp-route-id="@Model.Customer.Id" enctype="multipart/form-data" method="post">
    @Html.AntiForgeryToken()
    <div class="modal-header">
        <h5 class="modal-title">@ViewData["Title"]</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
    </div>
    <div class="modal-body">
        <input type="hidden" asp-for="@Model.Customer.Id" />

        <div class="mb-3">
            <label asp-for="@Model.Customer.CompanyName" class="form-label"></label>
            <input asp-for="@Model.Customer.CompanyName" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="@Model.Customer.StreetAddress" class="form-label"></label>
            <input asp-for="@Model.Customer.StreetAddress" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="@Model.Customer.City" class="form-label"></label>
            <input asp-for="@Model.Customer.City" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="@Model.Customer.State" class="form-label"></label>
            <input asp-for="@Model.Customer.State" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="@Model.Customer.Country" class="form-label"></label>
            <input asp-for="@Model.Customer.Country" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="@Model.Customer.MobileNumber" class="form-label"></label>
            <input asp-for="@Model.Customer.MobileNumber" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="@Model.Customer.SecondMobileNumber" class="form-label"></label>
            <input asp-for="@Model.Customer.SecondMobileNumber" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="@Model.Customer.Email" class="form-label"></label>
            <input asp-for="@Model.Customer.Email" class="form-control" />
        </div>

        <div class="form-check mb-3">
            <input asp-for="@Model.Customer.IsPaid" class="form-check-input" type="checkbox" />
            <label asp-for="@Model.Customer.IsPaid" class="form-check-label"></label>
        </div>

        <div class="mb-3">
            <label>Current Image</label>
            <div class="d-flex align-items-center gap-3">
                @if (@Model.Customer.ImageUrl != null)
                {
                    <img src="@Url.Action("GetImage", "Customers", new { id = @Model.Customer.Id })"
                         class="edit-img-rect shadow-sm" />
                }
                else
                {
                    <span class="badge bg-light text-secondary">No Image</span>
                }
            </div>
        </div>

        <div class="mb-3">
            <label>Upload New Image</label>
            <input type="file" name="image" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Services Provided</label>

            <div class="border rounded p-2" style="max-height:200px; overflow-y:auto;">
                @for (int i = 0; i < Model.Services.Count; i++)
                {
                    <div class="form-check">
                        <input type="hidden" asp-for="Services[i].ServiceId" />
                        <input type="hidden" asp-for="Services[i].Name" />

                        <input asp-for="Services[i].IsSelected"
                               class="form-check-input" />

                        <label class="form-check-label">
                            @Model.Services[i].Name
                        </label>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Save</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
    </div>
</form>


