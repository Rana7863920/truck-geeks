@model ContactFormModel

<main class="main">

    <!-- Page Title -->
    <div class="page-title dark-background" data-aos="fade" style="background-image: url(assets/img/page-title-bg.jpg);">
        <div class="container position-relative"> 
            <h1>Contact</h1> 
            <p>If you have any inquiries or would like to list your business on our site, please feel free to contact us using the form below.</p> 
            <nav class="breadcrumbs"> <ol> <li><a asp-controller="Home" asp-action="Index">Home</a></li> <li class="current">Contact</li> </ol> </nav> 
        </div> 
    </div>
    <!-- End Page Title -->
    <!-- Contact Section -->
    <section id="contact" class="contact section py-5">
        <div class="container" data-aos="fade-up" data-aos-delay="100">

            <div class="row justify-content-center">
                <div class="col-lg-10 col-xl-8">

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div id="successAlert" class="alert alert-success mb-4 text-center shadow-sm rounded">
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    <div class="card shadow-lg border-0 rounded-4">
                        <div class="card-body p-4 p-md-5">

                            <form asp-action="ContactUs" asp-controller="Home" method="post" class="needs-validation">
                                @Html.AntiForgeryToken()

                                <div class="row g-4">
                                    <div class="col-md-6">
                                        <label asp-for="Name" class="form-label fw-semibold"></label>
                                        <input asp-for="Name" class="form-control form-control-lg" placeholder="Your Name" />
                                        <span asp-validation-for="Name" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="Email" class="form-label fw-semibold"></label>
                                        <input asp-for="Email" class="form-control form-control-lg" placeholder="Your Email" />
                                        <span asp-validation-for="Email" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-12">
                                        <label asp-for="Subject" class="form-label fw-semibold"></label>
                                        <input asp-for="Subject" class="form-control form-control-lg" placeholder="Subject" />
                                        <span asp-validation-for="Subject" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-12">
                                        <label asp-for="Phone" class="form-label fw-semibold"></label>
                                        <input asp-for="Phone" class="form-control form-control-lg" placeholder="Phone (Optional)" />
                                    </div>

                                    <div class="col-md-12">
                                        <label asp-for="Message" class="form-label fw-semibold"></label>
                                        <textarea asp-for="Message" class="form-control form-control-lg" rows="6" placeholder="Message"></textarea>
                                        <span asp-validation-for="Message" class="text-danger small"></span>
                                    </div>

                                    <div class="col-12 text-center">
                                        <button type="submit" class="btn btn-primary btn-lg px-5 rounded-pill shadow-sm">
                                            Send Message
                                        </button>
                                    </div>
                                </div>
                            </form>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section><!-- /Contact Section -->

</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        setTimeout(function () {
            var alertBox = document.getElementById("successAlert");
            if (alertBox) {
                alertBox.style.display = "none";
            }
        }, 5000); // hides after 5 seconds
    </script>
}
