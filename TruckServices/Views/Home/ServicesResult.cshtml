<!-- ✅ Search Form -->
<div class="container-fluid px-3 mt-4">
    <form asp-controller="Home" asp-action="ServicesResults" method="post"
          class="custom-form-wrapper mb-4 shadow-sm rounded-3 p-4 bg-white"
          data-aos="fade-up" data-aos-delay="200">
        @Html.AntiForgeryToken()

        <div class="row g-3 align-items-end">

            <!-- Location -->
            <div class="col-12 col-md-4 position-relative">
                <label for="location" class="form-label fw-semibold">Location</label>

                <div class="input-group">
                    <span class="input-group-text bg-light">
                        <svg width="18" height="18" fill="none" stroke="currentColor" stroke-width="1.5"
                             viewBox="0 0 16 16">
                            <path d="M14 6.667C14 11.334 8 15.334 8 15.334S2 11.334 2 6.667a6 6 0 0112 0z" />
                            <circle cx="8" cy="6.667" r="2" />
                        </svg>
                    </span>

                    <input type="text"
                           id="location"
                           name="location"
                           class="form-control"
                           placeholder="Search for a city"
                           autocomplete="off"
                           required
                           value="@Model.Location">

                    <!-- Loading spinner -->
                    <span class="input-group-text bg-white d-none" id="locationLoader">
                        <div class="typing-dots">
                            <span></span>
                            <span></span>
                            <span></span>
                        </div>

                    </span>
                </div>


                <!-- Custom Dropdown -->
                <div id="locationDropdown" class="location-dropdown d-none"></div>
            </div>

            <!-- Service -->
            <div class="col-12 col-md-4">
                <label for="service" class="form-label fw-semibold">Service</label>
                <div class="input-group">
                    <span class="input-group-text bg-light">
                        <svg width="18" height="18" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                            <path d="M14.3 6.5L16 8.2a1 1 0 001.4 0l4-4a6 6 0 01-1.1 7.8l-6.9 6.9a6 6 0 01-8.5 0 6 6 0 010-8.5l6.9-6.9a6 6 0 017.8-1.1l-4 4a1 1 0 000 1.4z" />
                        </svg>
                    </span>
                    <select class="form-select" id="service" name="service" required>
                        <option value="">Select the service</option>

                        @if (Model.Service == "repair")
                        {
                            <option value="repair" selected>Truck Repair</option>
                        }
                        else
                        {
                            <option value="repair">Truck Repair</option>
                        }

                        @if (Model.Service == "trailer")
                        {
                            <option value="trailer" selected>Trailer Repair</option>
                        }
                        else
                        {
                            <option value="trailer">Trailer Repair</option>
                        }

                        @if (Model.Service == "tire")
                        {
                            <option value="tire" selected>Tire Repair</option>
                        }
                        else
                        {
                            <option value="tire">Tire Repair</option>
                        }

                        @if (Model.Service == "towing")
                        {
                            <option value="towing" selected>Towing</option>
                        }
                        else
                        {
                            <option value="towing">Towing</option>
                        }

                        @if (Model.Service == "maintenance")
                        {
                            <option value="maintenance" selected>Maintenance</option>
                        }
                        else
                        {
                            <option value="maintenance">Maintenance</option>
                        }

                        @if (Model.Service == "reefer")
                        {
                            <option value="reefer" selected>Reefer</option>
                        }
                        else
                        {
                            <option value="reefer">Reefer</option>
                        }

                        @if (Model.Service == "networks")
                        {
                            <option value="networks" selected>Networks</option>
                        }
                        else
                        {
                            <option value="networks">Networks</option>
                        }
                    </select>
                </div>
            </div>

            <div class="col-12 col-md-2">
                <label asp-for="Radius" class="form-label fw-semibold">
                    Search Radius (Miles)
                </label>

                <select asp-for="Radius"
                        class="form-select"
                        asp-items="@(new SelectList(new[]
            {
                new { Value = 5, Text = "5 miles" },
                new { Value = 10, Text = "10 miles" },
                new { Value = 25, Text = "25 miles" },
new { Value = 50, Text = "50 miles" }
            }, "Value", "Text"))">
                </select>
            </div>



            <!-- Search Button -->
            <div class="col-12 col-md-2">
                <label class="form-label invisible">Search</label>
                <button type="submit" class="btn btn-primary w-100 d-flex align-items-center justify-content-center gap-2"
                        style="padding-top:11px; padding-bottom:11px;">
                    Search
                </button>
            </div>
        </div>
    </form>
</div>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-warning text-center mt-4">@Model.ErrorMessage</div>
