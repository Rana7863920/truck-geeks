        }

        <hr class="my-5" />
    }


    @if (regularProviders != null && regularProviders.Any())
    {
        <h2>Other Service Providers (@regularProviders.Count)</h2>

        @foreach (var provider in regularProviders)
        {
            <div class="provider-card">
                <div class="provider-header">
                    <h3>@provider.CompanyName</h3>
                    <button type="button" class="contact-button"
                            data-bs-toggle="modal"
                            data-bs-target="#contactModal"
                            data-company="@provider.CompanyName"
                            data-number="@provider.MobileNumber"
                            data-second="@provider.SecondMobileNumber">
                        Contact
                    </button>
                </div>
                <div class="provider-body">
                    <div class="provider-image-regular">
                        <img src="@provider.ImageBase64" alt="@provider.CompanyName logo" />
                    </div>
                    <div class="provider-info">
                        <div class="info-tags">
                            <span><i class="fas fa-map-marker-alt"></i>@provider.StreetAddress</span>
                            <span>
                                <i class="far fa-clock"></i>Hours:
                                <span class="@(provider.Status == "Open" ? "open" : "closed")">(@provider.Status)</span>
                            </span>
                            <span>
                                <i class="fas fa-external-link-alt"></i>
                                <a href="https://www.google.com/search?q=@Uri.EscapeDataString(provider.CompanyName + " " + provider.StreetAddress)"
                                   target="_blank"
                                   rel="noopener noreferrer">
                                    Website
                                </a>
                            </span>
                        </div>

                        @if (provider.Services != null && provider.Services.Any())
                        {
                            <div class="provider-services mt-2">
                                <strong>Services:</strong>
                                <ul class="services-list">
                                    @foreach (var service in provider.Services)
                                    {
                                        <li>@service</li>
                                    }
                                </ul>
                            </div>
