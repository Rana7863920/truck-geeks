    @if (Model.TotalCount == 0)
    {
        <div class="no-results text-center p-5 mt-4 mb-5 shadow-sm rounded-3 bg-light" data-aos="fade-up">
            <h3 class="fw-bold mb-2">No Results Found</h3>
            <p class="text-muted mb-3">
                Try increasing the search radius or search for another nearby city.
            </p>
            <i class="fas fa-search fa-3x text-secondary opacity-50"></i>
        </div>
    }


    <!-- Pagination -->
    <div class="pagination-wrapper">
        @if (Model.CurrentPage > 1)
        {
            <form asp-action="ServicesResults" method="post" class="d-inline">
                @Html.AntiForgeryToken()
                <input type="hidden" name="location" value="@Model.Location" />
                <input type="hidden" name="service" value="@Model.Service" />
                <input type="hidden" name="page" value="@(Model.CurrentPage - 1)" />
                <button type="submit" class="btn-pagination">« Prev</button>
            </form>
        }

        <span class="page-count">Page @Model.CurrentPage of @Model.TotalPages</span>

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <form asp-action="ServicesResults" method="post" class="d-inline">
                @Html.AntiForgeryToken()
                <input type="hidden" name="location" value="@Model.Location" />
                <input type="hidden" name="service" value="@Model.Service" />
                <input type="hidden" name="page" value="@(Model.CurrentPage + 1)" />
                <button type="submit" class="btn-pagination">Next »</button>
            </form>
        }
    </div>
</div>

@section Scripts {
    <script>
        const input = document.getElementById("location");
        const dropdown = document.getElementById("locationDropdown");
        let debounce;

        input.addEventListener("focus", () => {
            renderUseMyLocation();
            dropdown.classList.remove("d-none");
        });

               input.addEventListener("input", () => {
            clearTimeout(debounce);
            const term = input.value.trim();

            if (!term) {
                hideLoader();
                dropdown.classList.add("d-none");
                return;
            }

            showLoader();

            debounce = setTimeout(() => {
                fetch(`/Home/SearchCities?term=${encodeURIComponent(term)}`)
                    .then(r => r.json())
                    .then(data => {
                        hideLoader();
                        renderCities(data);
                    })
                    .catch(() => {
                        hideLoader();
                    });
            }, 300);
        });


        document.addEventListener("click", e => {
            if (!e.target.closest(".position-relative")) {
                dropdown.classList.add("d-none");
            }
        });

               function renderUseMyLocation() {
            dropdown.innerHTML = `
                <div class="location-item location-primary" onclick="useMyLocation()">
                    <div class="location-icon">📍</div>
                    <div>
                        <strong>Use My Location</strong><br>
                        <small class="text-muted">Detect your current city</small>
                    </div>
                </div>
                <div class="location-divider"></div>
            `;
        }

        function renderCities(data) {
            renderUseMyLocation();

            if (!data.length) {
                dropdown.innerHTML += `
                    <div class="location-item text-muted">
                        No cities found
                    </div>
                `;
                return;
            }

            data.forEach(c => {
                const label =
                    `${c.city}${c.state ? ', ' + c.state : ''}, ${c.country}`;

                dropdown.innerHTML += `
                    <div class="location-item" onclick="selectCity('${label.replace(/'/g, "\\'")}')">
                        <div class="location-icon">🏙️</div>
                        <div>${label}</div>
                    </div>
                `;
            });

            dropdown.classList.remove("d-none");
        }

                function selectCity(text) {
            input.value = text;
            hideLoader();
            dropdown.classList.add("d-none");
        }

        function useMyLocation() {
            showLoader();
            navigator.geolocation.getCurrentPosition(pos => {
                fetch(`/Home/GetCityStateCountry?lat=${pos.coords.latitude}&lng=${pos.coords.longitude}`)
                    .then(r => r.json())
                    .then(r => {
                        input.value = `${r.city}, ${r.state}, ${r.country}`;
                        hideLoader();
                        dropdown.classList.add("d-none");
                    });
            }, () => {
                hideLoader();
                alert("Could not access your location.");
            });
        }

    </script>

    <script>
        const loader = document.getElementById("locationLoader");

        function showLoader() {
            loader.classList.remove("d-none");
            input.classList.add("location-searching");
        }

        function hideLoader() {
            loader.classList.add("d-none");
            input.classList.remove("location-searching");
        }
    </script>
