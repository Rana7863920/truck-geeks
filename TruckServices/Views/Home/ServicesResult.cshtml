<!-- Existing Results Container -->
<div class="results-container">
    <h2>Service Providers (@Model.TotalCount)</h2>

    @if (featuredProviders != null && featuredProviders.Any())
    {
        <h2 class="mb-4">
            ⭐ Featured Service Providers
        </h2>

        @foreach (var provider in featuredProviders)
        {
            <div class="provider-card border border-warning">
                <div class="provider-header">
                    <h3>
                        @provider.CompanyName
                        <span class="badge bg-warning text-dark ms-2">Featured</span>
                    </h3>

                    <button type="button" class="contact-button"
                            data-bs-toggle="modal"
                            data-bs-target="#contactModal"
                            data-company="@provider.CompanyName"
                            data-number="@provider.MobileNumber"
                            data-second="@provider.SecondMobileNumber">
                        Contact
                    </button>
                </div>

                <div class="provider-body">
                    <div class="provider-image">
                        <img src="@provider.ImageBase64"
                             alt="@provider.CompanyName logo" />
                    </div>

                    <div class="provider-info">
                        <div class="info-tags">
                            <span><i class="fas fa-map-marker-alt"></i>@provider.StreetAddress</span>
                            <span>
                                <i class="far fa-clock"></i>
                                <span class="@(provider.Status == "Open" ? "open" : "closed")">
                                    (@provider.Status)
                                </span>
                            </span>
                            <span>
                                <i class="fas fa-external-link-alt"></i>
                                <a href="https://www.google.com/search?q=@Uri.EscapeDataString(provider.CompanyName + " " + provider.StreetAddress)"
                                   target="_blank"
                                   rel="noopener noreferrer">
                                    Website
